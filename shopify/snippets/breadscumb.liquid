{% unless request.page_type == 'index' or request.page_type == 'cart' %}
    <nav aria-label="breadcrumbs" class="container pt-md mb-6 text-subtitle uppercase" role="navigation">
        <a class="text-effect-1" href="/collections/new-arrivals" title="Shop" id="breadcrumb-home">Shop</a>
        {% if request.page_type == 'product' %}
            {%- if collection.url -%}
                <span aria-hidden="true" class=" ml-1">/</span>
                <span class="text-effect-1">{{ collection.title | link_to: collection.url }}</span>
            {%- endif -%}
            <span aria-hidden="true" class=" ml-1">/</span>
            <span class="breadcrumb--truncate">{{ product.title }}</span>
        {% elsif request.page_type == 'collection' and collection.handle %}
            <span aria-hidden="true" class=" ml-1">/</span>

            {% if current_tags %}

                {%- if collection.url == blank -%}
                    {% assign url = routes.all_products_collection_url %}
                {%- else -%}
                    {% assign url = collection.url %}
                {%- endif -%}

                {{ collection.title | link_to: url }}

                <span aria-hidden="true" class=" ml-1">/</span>

                {% for tag in current_tags %}

                    {% assign is_advanced_tag = false %}
                    {% assign cat = tag | split: '_' | first %}
                    {% unless cat == tag %}
                        {% if cat_array contains cat %}
                            {% assign is_advanced_tag = true %}
                            <span>
                                {{ tag | remove_first: cat | remove_first: '_' }}
                            </span>
                        {% endif %}
                    {% endunless %}

                    {% if is_advanced_tag == false %}
                        <span>
                            {{ tag }}
                        </span>
                    {% endif %}

                    {% unless forloop.last %}
                        <span>+</span>
                    {% endunless %}

                {% endfor %}

            {% else %}
                <span>{{ collection.title }}</span>
            {% endif %}

        {% elsif request.page_type == 'blog' %}

            <span aria-hidden="true" class=" ml-1">/</span>
            {% if current_tags %}
                {{ blog.title | link_to: blog.url }}
                <span aria-hidden="true" class=" ml-1">/</span>
                <span>{{ current_tags | join: " + " }}</span>
            {% else %}
                <span>{{ blog.title }}</span>
            {% endif %}

        {% elsif request.page_type == 'article' %}

            <span aria-hidden="true" class=" ml-1">/</span>
            {{ blog.title | link_to: blog.url }}
            <span aria-hidden="true" class=" ml-1">/</span>
            <span>{{ article.title }}</span>

        {% elsif request.page_type == 'page' %}

            <span aria-hidden="true" class=" ml-1">/</span>
            <span>{{ page.title }}</span>
        {% elsif request.page_type == 'search' %}

            <span aria-hidden="true" class=" ml-1">/</span>
            <span>search</span>
        {% else %}

            <span aria-hidden="true" class=" ml-1">/</span>
            <span>{{ page_title }}</span>

        {% endif %}
    </nav>

    <script>
        if (sessionStorage.breadcrumb) {
            theme.breadcrumbs = {};
            theme.breadcrumbs.collection = JSON.parse(sessionStorage.breadcrumb);
            var showCollection = false;{%- if request.page_type == "product" -%}
                var breadcrumbHTML = "<span class=\" ml-1\" aria-hidden=\"true\">&nbsp;/&nbsp;</span><a href=\"" + theme
                    .breadcrumbs
                    .collectiona
                    .link + "\" title=\"" + theme
                    .breadcrumbs
                    .collection
                    .title + "\">" + theme
                    .breadcrumbs
                    .collection
                    .title + "</a>";
                var homeBreadcrumb = document.getElementById("breadcrumb-home");
                var productCollections = {{ product.collections | json }};
                if (productCollections) {
                    productCollections.forEach(function (collection) {
                        if (collection.title === theme
                                .breadcrumbs
                                .collection
                                .title) {
                            showCollection = true;
                        }
                    });
                }
                if (homeBreadcrumb && showCollection) {
                    homeBreadcrumb.insertAdjacentHTML("afterend", breadcrumbHTML);
                }
            {%- endif -%}
        }
    </script>
{% endunless %}