        {% if section.settings.image_left %} {% include 'image-full' image:section.settings.image_left %} {% else %}
        <img class="object-cover w-full h-full" src="https://cdn.shopify.com/s/files/1/0594/5406/2744/files/jewelry-02_2000x.jpg?v=1632407363" loading="lazy" class="header__heading-logo ]" width="256" height="131" alt="{{ shop_name | escape }}"> {% endif
        %}
