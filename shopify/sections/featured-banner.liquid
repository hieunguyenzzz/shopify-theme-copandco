        }, {
            "type": "url",
            "id": "buttonUrl",
            "label": "Button Url",
            "default": "/"
        }, 
        {
            "type": "text",
            "id": "circleText",
            "label": "text 1",
            "default": "every day jewelry estnesialsâ€¢"
        },
        {
            "type": "text",
            "id": "text2",
            "label": "text 2",
            "default": "quisque ultricies ligula lectus"
        },
        {
            "type": "text",
            "id": "text3",
            "label": "text 3",
            "default": "a varius lorem tristique quis"
        },
        {
            "type": "image_picker",
            "id": "image_left",
            "label": "left image"
        }, {
            "type": "image_picker",
            "id": "image_right",
            "label": "left image"
        }
    ],
    "presets": [
