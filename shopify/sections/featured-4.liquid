<div id="{{ section.id }}" class="py-[10%] flex justify-end space-x-12  relative isolate">
    <div class="w-full h-full flex absolute inset-0  justify-center items-center z-[-1] bg-gray-100 brightness-50">
        {{ 'collection-3' | placeholder_svg_tag: 'max-w-[400px]' }}
    </div>
    <div class="page-width flex-1 flex justify-end">
        <div class="p-12 w-1/2 text-center text-white">
            <div class="mb-6 text-xl font-semibold">{{section.settings.sub_heading}}</div>
            <h2 class="text-6xl leading-none whitespace-pre-line  text-white">{{section.settings.heading}}</h2>
            <div class="mt-8">{{section.settings.description}}</div>
            <button class="btn btn-lg rounded-none bg-black text-white mt-6">SHOP All</button>
        </div>
    </div>
    
</div>

{% schema %}
{
    "name": "Featured 2",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "DREAMCATCHER\nfor dreamer"
        },
        {
            "type": "text",
            "id": "sub_heading",
            "label": "Sub Heading",
            "default": "COLLECTION"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Make your dream come true by wearing our products</p>"
        }
    ],
    "blocks": [
        {
            "type": "article",
            "name": "Article",
            "settings": [
                {
                    "type": "article",
                    "id": "article",
                    "label": "Article"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Featured 2",
            "blocks": []
        }
    ]
}
{% endschema %}