<div id="{{ section.id }}" class="mt-24 container mx-auto">
    <div>
        <h2 class="text-4xl whitespace-pre-line text-center">{{section.settings.heading}}</h2>
    </div>
    <div class="mt-12 grid gap-6 grid-cols-2 lg:grid-cols-3">
        {% if section.blocks.size == 0 %}
            {% for i in (1..3) %}
                <div class="flex-1">
                    <div class="w-full relative hover:shadow-lg">
                        <div class="pt-[100%]"></div>
                        {% render '[section]-image-full'  class: '' %}
                    </div>
                    <div class="mt-6 px-12 space-y-[0.5em]">
                        <h4 class="text-3xl">Gemmine jade set</h4>
                        <div>gold, jade pendant</div>
                        <div>
                            <span class="font-bold text-lg">now $230</span>
                            <span class="ml-3 line-through">$120</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            {% for block in section.blocks %}
                <a href="{{block.settings.product.url}}" class="flex-1">
                    <div class="w-full relative hover:shadow-lg">
                        <div class="pt-[100%]"></div>
                        {% render 'image-full'  class: '' image:block.settings.product.images[0] %}
                    </div>
                    <div class="mt-6 px-12 space-y-[0.5em]">
                        <h4 class="text-3xl">{{block.settings.product.title}}</h4>
                        <div>gold, jade pendant</div>
                        <div>
                            {% render '[product]-price'  class: '' %}
                        </div>
                    </div>
                </a>
            {% endfor %}
        {% endif %}

    </div>
</div>

{% schema %}

{
    "name": "Featured 6",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "End of season Sale"
        }
    ],
    "blocks": [
        {
            "type": "product",
            "name": "product",
            "settings": [
                {
                    "type": "product",
                    "id": "product",
                    "label": "Product"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Featured 6",
            "blocks": []
        }
    ]
}

{% endschema %}