
<div id="{{ section.id }}" class="">
    <div>
        <h2>{{section.settings.heading}}</h2>
        <div>{{section.settings.sub_heading}}</div>
        <div>{{section.settings.description}}</div>
    </div>
</div>

{% schema %}
{
    "name": "Featured 1",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default":"New Collection"
        },
        {
            "type": "text",
            "id": "sub_heading",
            "label": "Sub Heading",
            "default":"FALL WINTER 2021"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default":"<p>Integer in luctus ante. Praesent tellus ligula, quis lobortis velit lacinia luctus.</p>"
        }
    ],
    "blocks": [
        {
            "type": "article",
            "name": "Article",
            "settings": [
                {
                    "type": "article",
                    "id": "article",
                    "label": "Article"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Featured 1",
            "blocks": []
        }
    ]
}
{% endschema %}