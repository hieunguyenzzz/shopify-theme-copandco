<div id={{section.id}} class="-mt-header pt-header min-h-screen flex relative text-white text-xl overflow-hidden">
	<div class=" flex absolute top-0 left-0 h-full w-full lg:w-[60%]" id="leftImage">
		{% if section.settings.image_left %}
			{% render 'image-full' image:section.settings.image_left %}
		{% else %}
			<img class="object-cover w-full h-full" src="https://cdn.shopify.com/s/files/1/0594/5406/2744/files/jewelry-02_2000x.jpg?v=1632407363" loading="lazy" class="header__heading-logo ]" width="256" height="131" alt="{{ shop_name | escape }}">
		{% endif %}
	</div>
	<div class="hidden lg:flex absolute top-0 right-0 h-full lg:w-[40%]" id="rightImage">
		{% if section.settings.image_right %}
			{% render 'image-full' image:section.settings.image_right %}
		{% else %}
			<img class="object-cover w-full h-full" src="https://cdn.shopify.com/s/files/1/0594/5406/2744/files/jewelry-03_1000x.jpg?v=1632407363" loading="lazy" class="header__heading-logo ]" width="256" height="131" alt="{{ shop_name | escape }}">
		{% endif %}
	</div>

	<div class="container mx-auto flex w-full flex-col items-start justify-center py-12 min-h-full relative text-white">
		<h2 class="text-white text-6xl" id="heading">{{section.settings.heading}}</h2>
		<div class="whitespace-pre-line mt-6" id="description">{{section.settings.description}}</div>
		<div id="button">
			{% render 'button' url:section.settings.buttonUrl text:section.settings.buttonText class:'mt-16' %}
		</div>
	</div>
	<div class="hidden lg:block absolute bottom-0 right-[40%] transform translate-x-[50%] w-[400px] h-[400px] text-white text-base">
		<svg id="circle-text" class="" enable-background="new 0 0 300 300" height="100%" version="1.1" viewbox="0 0 300 300" width="100%" x="0px" xml:space="preserve" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://www.w3.org/2000/svg" y="0px">
			<defs>
				<path d="M 150, 150 m -60, 0 a 60,60 0 0,1 120,0 a 60,60 0 0,1 -120,0 " id="circlePath"/>
			</defs>
			<circle cx="150" cy="100" fill="none" r="75"/>
			<g>
				<use fill="none" xlink:href="#circlePath"/>
				<text fill="currentColor" style="letter-spacing: 0.2em;">
					<textPath xlink:href="#circlePath">{{section.settings.circleText}}</textPath>
				</text>
			</g>
		</svg>
	</div>
	<div class="hidden lg:block absolute top-[50%] right-10 w-[200px] whitespace-pre-line space-y-8">
		<p id="text-2">{{section.settings.text2}}</p>
		<p id="text-3">{{section.settings.text3}}</p>
	</div>
</div>

<visible-animate data-selector="#{{section.id}}">
	<style>
	  #{{section.id}} {
		visibility: hidden;
		opacity: 0;
		transition-property: opacity;
				transition-duration: 2s;
	  }
			#{{section.id}}.visible {
		visibility: visible;
		opacity: 1;
	  }
	  #{{section.id}} #leftImage,
	  #{{section.id}} #rightImage,
	  #{{section.id}} #heading,
	  #{{section.id}} #description,
	  #{{section.id}} #button,
	  #{{section.id}} #text-2,
	  #{{section.id}} #text-3
	  {
		visibility: hidden;
		opacity: 0;
		transition-property: opacity transform;
		transition-duration: 1s;
		transform: translateY(100%);
	  }
	  #{{section.id}}.visible #leftImage,
	  #{{section.id}}.visible #rightImage,
	  #{{section.id}}.visible #heading,
	  #{{section.id}}.visible #description,
	  #{{section.id}}.visible #button,
	  #{{section.id}}.visible #text-2,
	  #{{section.id}}.visible #text-3
	  {
		visibility: visible;
		opacity: 1;
		transform: translateY(0%);
	  } 
	  #{{section.id}}.visible #leftImage{
		  transition-delay: 0s;
	  }
	  #{{section.id}}.visible #rightImage{
		  transition-delay: 0.5s;
	  }
	  #{{section.id}}.visible #heading{
		  transition-delay: 0.8s;
	  }
	  #{{section.id}}.visible #description{
		  transition-delay: 1.1s;
	  }
	  #{{section.id}}.visible #button{
		  transition-delay: 1.4s;
	  }
	  #{{section.id}}.visible #text-2{
		  transition-delay: 1.7s;
	  }
	  #{{section.id}}.visible #text-3{
		  transition-delay: 2s;
	  }

			
		#{{section.id}} #circle-text{
				visibility: hidden;
			opacity: 0;
			transition-property: opacity transform;
			transition-duration: 1s;
			transform: rotate(-180deg);
			}
			#{{section.id}}.visible #circle-text{
				visibility: visible;
				opacity: 1;
				transform: rotate(0deg);
			}
			#{{section.id}} #circle-text{
					transition-duration: 2s;
		  transition-delay: 2.3s;
	  }
	</style>
</visible-animate>

