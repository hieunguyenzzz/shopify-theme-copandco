<div class="page-width my-24 space-x-24 flex isolate">
    <div class="flex flex-col justify-center relative text-center w-5/12 ">
        <div class="absolute inset-0 w-full h-full">
            {% render '[section]-image-full'  class: '' %}
        </div>
        <div class="isolate text-white flex min-h-full flex-col py-16 px-12">
            {% render '[section]-heading'  class: '' %}
            {% render '[section]-sub-heading'  class: 'mt-8' %}
            <div class="flex-1"></div>
            {% render '[section]-description'  class: 'mt-8' %}
            <!-- {% render '[section]-button'  class: 'mt-6' %} -->
        </div>

    </div>
    <div class="relative flex-1 space-y-12">
        <div class="text-3xl font-heading">
            We aim for versatility. So we bring you pieces that can be
            <b class="font-bold">worn together or alone</b>
        </div>
        <div class="font-semibold">SHOP THE LOOK</div>
        <div class="space-y-6 w-full">
            {% if section.blocks.size == 0 %}
                {% for i in (1..3) %}
                    <div class="flex space-x-12 w-full ">
                        <div class="flex-1 py-6">
                            {% render '[product]-content' product: 'example'  class: '' %}
                        </div>
                        <div class="w-1/3 max-w-md relative overflow-hidden">
                            {% render 'image-full'  class: '' %}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                {% for block in section.blocks %}
                    {% assign product  = block.settings.product %}
                    <div class="flex space-x-12 w-full ">
                        <div class="flex-1 py-6">
                            {% render '[product]-content'  class: '' %}
                        </div>
                        <div class="w-1/3 max-w-md relative overflow-hidden">
                            {% render 'image-full'  class: '' %}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
{% schema %}

{
    "name": "Featured 9",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "End of season Sale"
        }, {
            "type": "text",
            "id": "sub_heading",
            "label": "Sub Heading",
            "default": "UP TO 50%"
        }, {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Itâ€™s time to sale. 10 - 50% off on selected items.</p><p>Ends 5 September.</p>"
        }, {
            "type": "text",
            "id": "buttonText",
            "label": "Button Text",
            "default": "SHOP NOW"
        }, {
            "type": "url",
            "id": "buttonUrl",
            "label": "Button Url",
            "default": "/"
        }, {
            "type": "image_picker",
            "id": "image",
            "label": "Image background"
        }
    ],
    "presets": [
        {
            "name": "Featured 9",
            "blocks": []
        }
    ]
}

{% endschema %}