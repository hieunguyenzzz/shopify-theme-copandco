<div id="{{ section.id }}" class="page-width mt-16">
	<div class="w-full relative">
    <div class="ml-[45%] mr-[22%] pt-[3%] pl-[5%] pr-[2%] pb-[400px]">
			<h2 class="text-6xl whitespace-nowrap">{{section.settings.heading}}</h2>
			<div class="text-xl mt-4">{{section.settings.sub_heading}}</div>
			<div class="mt-12">{{section.settings.description}}</div>
			<button class="btn btn-lg rounded-none  mt-12 bg-black text-white">SHOP NEW</button>
    </div>
    <div class="w-[45%] absolute left-0 top-0 h-full ">
        <div class="w-full h-full flex absolute inset-0 justify-center items-center bg-gray-100">
            {{ 'collection-3' | placeholder_svg_tag }}
        </div>
    </div>
    <div class="w-[22%] absolute right-0 bottom-[7%] ">
        <div class="pt-[145%]"></div>
        <div class="w-full h-full flex absolute inset-0 justify-center items-center bg-gray-100">
            {{ 'collection-3' | placeholder_svg_tag }}
        </div></div>
    <div class="absolute right-[25%] w-[15%] bottom-[0%]  ">
        <div class="pt-[145%]"></div>
        <div class="w-full h-full flex absolute inset-0 justify-center items-center bg-gray-100">
            {{ 'collection-3' | placeholder_svg_tag }}
        </div></div>
	</div>
</div>

{% schema %}
{
    "name": "Featured 1",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default":"New Collection"
        },
        {
            "type": "text",
            "id": "sub_heading",
            "label": "Sub Heading",
            "default":"FALL WINTER 2021"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default":"<p>Integer in luctus ante. Praesent tellus ligula, quis lobortis velit lacinia luctus.</p>"
        }
    ],
    "blocks": [
        {
            "type": "article",
            "name": "Article",
            "settings": [
                {
                    "type": "article",
                    "id": "article",
                    "label": "Article"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Featured 1",
            "blocks": []
        }
    ]
}
{% endschema %}