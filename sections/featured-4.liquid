<div id="{{ section.id }}" class="py-[10%] flex justify-end relative isolate">
    <div class="absolute inset-0 w-full h-full overflow-hidden z-[-1]">
        {% render 'image-full' image: section.settings.image %}
    </div>
    <div class="container mx-auto flex-1 flex justify-end">
        <div class="p-12 w-full lg:w-1/2 text-center text-white">
            <div class="mb-6 text-xl font-semibold">{{section.settings.sub_heading}}</div>
            <h2 class="text-6xl leading-none whitespace-pre-line  text-white">{{section.settings.heading}}</h2>
            <div class="mt-8">{{section.settings.description}}</div>
            {% render 'button' url: section.settings.buttonUrl text: section.settings.buttonText class: 'mt-6' %}
        </div>
    </div>
</div>

{% schema %}
{
    "name" : "Featured 4",
    "tag" : "section",
    "settings" : [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "DREAMCATCHER\nfor dreamer"
        }, {
            "type": "text",
            "id": "sub_heading",
            "label": "Sub Heading",
            "default": "COLLECTION"
        }, {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Make your dream come true by wearing our products</p>"
        }, {
            "type": "text",
            "id": "buttonText",
            "label": "Button Text",
            "default": "SHOP NOW"
        }, {
            "type": "url",
            "id": "buttonUrl",
            "label": "Button Url",
            "default": "/"
        }, {
            "type": "image_picker",
            "id": "image",
            "label": "Image background"
        }
    ],
    "presets" : [
        {
            "name": "Featured 4",
            "blocks": []
        }
    ]
}

{% endschema %}