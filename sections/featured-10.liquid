<div class="container mx-auto my-24 space-x-18 flex">
    <div class="flex flex-col justify-center max-w-xs relative">
        {% render '[section]-heading'  class: '' %}
        {% render '[section]-sub-heading'  class: 'mt-3' %}
        {% render '[section]-description'  class: 'mt-8' %}
    </div>
    <div class="flex-1 flex space-x-6">
        <div class="flex-1 space-y-6">
            <div class="relative">
                <div class="relative aspect-w-16 aspect-h-12">
                </div>
                {% render 'image-full' image:section.settings.image_1 class: '' %}
            </div>
            <div>{{section.settings.description_1}}</div>
        </div>
        <div class="flex-1 space-y-6">
            <div class="relative">
                <div class="relative aspect-w-16 aspect-h-12">
                </div>
                {% render 'image-full' image:section.settings.image_2 class: '' %}
            </div>
            <div>{{section.settings.description_2}}</div>
        </div>
    </div>
    
   
</div>
